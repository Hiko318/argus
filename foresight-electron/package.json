{
  "name": "argus-electron",
  "version": "1.0.0",
  "description": "ARGUS SAR System - Search and Rescue Drone Vision Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "dist:win": "electron-builder --win --publish=never",
    "dist:linux": "electron-builder --linux --publish=never",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "drone",
    "sar",
    "search-and-rescue",
    "computer-vision",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-fetch": "^2.6.9",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.argus.sar",
    "productName": "ARGUS SAR",
    "copyright": "Copyright Â© 2024 ARGUS SAR Team",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.svg"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.svg",
      "category": "Utility"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/express/**/*",
      "node_modules/node-fetch/**/*",
      "node_modules/ws/**/*"
    ]
  }
}
