    "forensic_preservation": {
      "enabled": true,
      "automatic_evidence_preservation": true,
      "chain_of_custody": true,
      "forensic_imaging": true,
      "legal_hold_procedures": true,
      "expert_analysis_available": true,
      "description": "Preserve evidence for investigation and legal proceedings"
