{
  "privacy_settings": {
    "version": "1.0",
    "last_updated": "2024-01-15T00:00:00Z",
    "description": "Privacy-first default configuration for ARGUS SAR system",
    "enforcement_level": "strict"
  },
  
  "data_protection": {
    "face_blur": {
      "enabled": true,
      "default_state": "always_on",
      "blur_strength": 0.8,
      "detection_confidence_threshold": 0.7,
      "override_requires_authorization": true,
      "authorized_roles": ["mission_commander", "privacy_officer"],
      "audit_override_events": true,
      "description": "Automatically blur faces in video streams and stored footage"
    },
    
    "biometric_processing": {
      "enabled": false,
      "default_state": "opt_in_only",
      "requires_explicit_consent": true,
      "emergency_override_allowed": true,
      "emergency_authorization_required": ["mission_commander", "legal_counsel"],
      "auto_disable_after_mission": true,
      "retention_period_hours": 24,
      "description": "Biometric identification disabled by default, requires explicit activation"
    },
    
    "data_minimization": {
      "enabled": true,
      "collect_only_necessary": true,
      "auto_delete_routine_data": true,
      "routine_retention_days": 30,
      "evidence_retention_years": 7,
      "metadata_retention_policy": "minimal",
      "location_precision_limit": "100m",
      "description": "Minimize data collection and retention to operational necessity"
    },
    
    "anonymization": {
      "enabled": true,
      "auto_anonymize_non_targets": true,
      "anonymization_delay_hours": 24,
      "preserve_mission_critical_data": true,
      "anonymization_methods": ["face_blur", "voice_distortion", "identifier_removal"],
      "reversible_anonymization": false,
      "description": "Automatically anonymize non-target individuals after mission completion"
    }
  },
  
  "access_controls": {
    "authentication": {
      "multi_factor_required": true,
      "session_timeout_minutes": 30,
      "max_concurrent_sessions": 1,
      "password_complexity": "high",
      "biometric_auth_for_sensitive": true,
      "audit_all_access": true,
      "description": "Strong authentication requirements for all system access"
    },
    
    "role_based_access": {
      "enabled": true,
      "principle_of_least_privilege": true,
      "default_permissions": "read_only",
      "elevated_access_requires_justification": true,
      "temporary_access_auto_expire": true,
      "access_review_frequency_days": 90,
      "description": "Granular role-based permissions with minimal default access"
    },
    
    "data_access_logging": {
      "enabled": true,
      "log_all_data_access": true,
      "log_search_queries": true,
      "log_export_operations": true,
      "log_retention_years": 7,
      "real_time_monitoring": true,
      "anomaly_detection": true,
      "description": "Comprehensive logging of all data access and operations"
    }
  },
  
  "data_sharing": {
    "external_sharing": {
      "enabled": false,
      "default_state": "prohibited",
      "requires_explicit_authorization": true,
      "authorized_agencies_only": true,
      "sharing_agreement_required": true,
      "audit_all_sharing": true,
      "auto_expire_sharing_permissions": true,
      "description": "External data sharing prohibited by default, requires explicit authorization"
    },
    
    "research_use": {
      "enabled": false,
      "anonymization_required": true,
      "ethics_review_required": true,
      "consent_verification_required": true,
      "purpose_limitation": true,
      "data_use_agreements": true,
      "description": "Research use of data requires anonymization and ethics approval"
    },
    
    "cross_border_transfers": {
      "enabled": false,
      "adequacy_decision_required": true,
      "appropriate_safeguards_required": true,
      "encryption_in_transit": true,
      "jurisdiction_restrictions": true,
      "legal_review_required": true,
      "description": "Cross-border data transfers require legal safeguards and encryption"
    }
  },
  
  "transparency": {
    "data_subject_notifications": {
      "enabled": true,
      "public_notice_required": true,
      "mission_area_notification": true,
      "post_mission_notification": true,
      "notification_methods": ["public_website", "local_media", "direct_contact"],
      "notification_languages": ["en", "es", "fr"],
      "description": "Proactive notification of data subjects about processing activities"
    },
    
    "privacy_notices": {
      "enabled": true,
      "clear_and_understandable": true,
      "purpose_specification": true,
      "legal_basis_explanation": true,
      "retention_period_disclosure": true,
      "rights_information": true,
      "contact_information": true,
      "description": "Clear and comprehensive privacy notices for all processing"
    },
    
    "public_reporting": {
      "enabled": true,
      "quarterly_transparency_reports": true,
      "mission_statistics": true,
      "privacy_metrics": true,
      "incident_reporting": true,
      "anonymized_case_studies": true,
      "description": "Regular public reporting on system use and privacy protection"
    }
  },
  
  "technical_safeguards": {
    "encryption": {
      "enabled": true,
      "encryption_at_rest": "AES-256",
      "encryption_in_transit": "TLS-1.3",
      "key_rotation_days": 90,
      "hardware_security_modules": true,
      "end_to_end_encryption": true,
      "description": "Strong encryption for all data at rest and in transit"
    },
    
    "data_loss_prevention": {
      "enabled": true,
      "content_inspection": true,
      "egress_monitoring": true,
      "removable_media_blocking": true,
      "email_filtering": true,
      "cloud_upload_restrictions": true,
      "description": "Prevent unauthorized data exfiltration and loss"
    },
    
    "privacy_enhancing_technologies": {
      "differential_privacy": {
        "enabled": true,
        "epsilon_value": 1.0,
        "noise_calibration": "automatic",
        "utility_preservation": true
      },
      "homomorphic_encryption": {
        "enabled": false,
        "use_cases": ["aggregate_statistics"],
        "performance_impact": "high"
      },
      "secure_multiparty_computation": {
        "enabled": false,
        "use_cases": ["cross_agency_analysis"],
        "implementation_complexity": "high"
      },
      "description": "Advanced privacy-preserving technologies for enhanced protection"
    }
  },
  
  "incident_response": {
    "breach_detection": {
      "enabled": true,
      "real_time_monitoring": true,
      "anomaly_detection": true,
      "automated_alerts": true,
      "escalation_procedures": true,
      "response_time_target_minutes": 15,
      "description": "Rapid detection and response to privacy and security incidents"
    },
    
    "breach_notification": {
      "enabled": true,
      "supervisory_authority_notification_hours": 72,
